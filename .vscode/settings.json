{
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "breadcrumbs.showModules": true,
    "markdown.preview.fontFamily": "'Century Gothic',' MesloLGS NF', 'Ubuntu', sans-serif",
    "editor.fontFamily": "'MesloLGS NF', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "cSpell.customDictionaries": {
        "project-words": {
            "name": "supergene_words",
            "path": "${workspaceRoot}/supergene_words.txt",
            "description": "Words used in the web novel, Super Gene",
            "addWords": true
        },
    },
    "git.ignoreLimitWarning": true
}